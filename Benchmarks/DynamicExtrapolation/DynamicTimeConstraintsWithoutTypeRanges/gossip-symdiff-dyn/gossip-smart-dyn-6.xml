		<name x="5" y="5">Node</name>
		<parameter>id_t i</parameter>
		<declaration>
clock x;
Secrets secrets = 0;

int duration;

int symdiff(Secrets a, Secrets b) {
    int count = 0;
    Secrets bstr = a^b;
    for (j : id_t) {
        count += (bstr &gt;&gt; j) &amp; 1;
    }
    return count;
}

int numSecrets() {
    return symdiff(secrets, 0);
}</declaration>
